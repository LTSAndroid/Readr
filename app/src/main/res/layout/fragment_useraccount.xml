<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.pixelmags.android.pixelmagsapp.ui.UserAccountFragment"
    android:background="#FFFFFF"
    android:id="@+id/fragment_useraccount">

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:id="@+id/labelUserId"
        android:layout_marginTop="64dp"
        android:textSize="20dp"
        android:text="@string/account_user_id"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/accountLogout"
        android:layout_toStartOf="@+id/accountLogout" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/dataUserId"
        android:text="Pixelmags user id"
        android:textSize="20dp"
        android:layout_alignTop="@+id/labelUserId"
        android:layout_toRightOf="@+id/labelUserId"
        android:layout_toEndOf="@+id/labelUserId" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:id="@+id/labelUserEmail"
        android:text="@string/account_user_email"
        android:textSize="20dp"
        android:layout_below="@+id/dataUserId"
        android:layout_alignLeft="@+id/labelUserId"
        android:layout_alignStart="@+id/labelUserId" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:id="@+id/dataUserEmail"
        android:text="user email address"
        android:ems="10"
        android:textSize="20dp"
        android:layout_alignTop="@+id/labelUserEmail"
        android:layout_alignLeft="@+id/dataUserId"
        android:layout_alignStart="@+id/dataUserId" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/labelUserName"
        android:textSize="20dp"
        android:text="@string/account_user_full_name"
        android:layout_below="@+id/labelUserEmail"
        android:layout_alignLeft="@+id/labelUserEmail"
        android:layout_alignStart="@+id/labelUserEmail"
        android:layout_toLeftOf="@+id/dataUserEmail"
        android:layout_toStartOf="@+id/dataUserEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/dataUserFullName"
        android:text="Full name"
        android:textSize="20dp"
        android:layout_below="@+id/labelUserEmail"
        android:layout_toRightOf="@+id/labelUserName"
        android:layout_toEndOf="@+id/labelUserName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountLogout"
        android:onClick="onButtonClick"
        android:text="@string/log_out"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
