<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment_useraccount"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.pixelmags.android.ui.UserAccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/labelUserId"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/account_user_id"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/dataUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/labelUserId"
            android:layout_toEndOf="@+id/labelUserId"
            android:layout_toRightOf="@+id/labelUserId"
            android:text="Pixelmags User ID"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/labelUserEmail"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/account_user_email"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/dataUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="user@email.com"
            android:inputType="textEmailAddress|textMultiLine"
            android:text="user email address"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/labelUserName"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="@string/account_user_full_name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/dataUserFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textCapSentences"
            android:scrollbars = "vertical"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textSize="18dp"/>


    </LinearLayout>


    <Button
        android:id="@+id/accountLogout"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/register_button_background"
        android:shadowColor="#3384ff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/log_out"
        android:textColor="#ffffff" />



</LinearLayout>