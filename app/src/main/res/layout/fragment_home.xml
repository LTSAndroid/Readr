<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pixelmags.androidbranded.fragment.HomeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:tabIndicatorColor="#FFB43A"
        app:tabIndicatorHeight="4dp"
        app:tabMode="scrollable"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sub_home_container">



        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:elevation="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#21478B"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@drawable/ic_update"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any Time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:typeface="normal"

                />

            <com.zcw.togglebutton.ToggleButton
                android:layout_width="54dp"
                toggle:tbOnColor="#4BDA64"
                toggle:tbOffColor="#ddd"
                android:layout_margin="2dp"
                toggle:tbSpotColor="#ffffff"
                toggle:tbOffBorderColor="#4BDA64"
                toggle:tbBorderWidth="2dp"
                android:layout_height="30dp" >
            </com.zcw.togglebutton.ToggleButton>





        </LinearLayout>

    </FrameLayout>


    



</LinearLayout>
