<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.pixelmags.android.ui.SubscriptionsFragment"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="2">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:paddingLeft="30dip"
        android:textSize="17dp"
        android:id="@+id/subscriptionsBuyNowButton"
        android:text="1 Month Subscription"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        />

    <com.pixelmags.android.ui.uicomponents.MultiStateButton
        android:id="@+id/gridMultiStateSubscriptionButton1"
        android:text="£1.99"
        style="@style/MultiStateButtonBase"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:paddingLeft="30dip"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/subscriptions6MonthsText"
        android:text="3 Months Subscription"
        android:layout_below="@+id/subscriptionsBuyNowButton" />


    <com.pixelmags.android.ui.uicomponents.MultiStateButton
        android:id="@+id/gridMultiStateSubscriptionButton2"
        android:text="£1.99"
        style="@style/MultiStateButtonBase"/>

    <TextView
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:paddingLeft="30dip"
        android:textSize="17dp"
        android:textStyle="bold"
        android:id="@+id/subscriptions3MonthsText"
        android:text="6 Months Subscription"
        android:layout_below="@+id/subscriptions6MonthsText"/>

    <com.pixelmags.android.ui.uicomponents.MultiStateButton
        android:id="@+id/gridMultiStateSubscriptionButton3"
        android:text="£1.99"
        style="@style/MultiStateButtonBase"/>


</GridLayout>