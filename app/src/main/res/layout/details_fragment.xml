<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:toggle="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:padding="10dp"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/detailsimage"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                android:background="@drawable/custom_drop_shadow_drawable"
                />

            <TextView
                android:id="@+id/detailstitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#605E5E"
                android:text="september 2017"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="center"
                android:typeface="normal"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#605E5E"
                android:text="Swipe to Preview"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="center"
                android:typeface="normal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#007CFF"
                android:text="DOWNLOAD"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="normal"
                android:background="@drawable/download_rect"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_update"
                android:background="@drawable/square"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="6dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_rate_star_button"
                android:background="@drawable/star"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September 2017"
                android:typeface="normal"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life and Death of Waves"
                android:typeface="normal"
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="5dp"
                android:textColor="#007CFF"
                android:text="\u20B9 650"
                android:textStyle="bold"
                android:gravity="center"
                android:typeface="normal"
                android:background="@drawable/download_rect"
                />


            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:gravity="center"
                   android:text="Sports"
                   android:padding="7dp"
                   android:background="@drawable/cat_shape"
                   android:textColor="@color/white"
                   android:typeface="normal"
                   android:layout_marginTop="30sp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Age Restriction 12 +"
                   android:layout_marginLeft="10dp"
                   android:typeface="normal"
                   android:layout_marginTop="30sp"/>

           </LinearLayout>












        </LinearLayout>








    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:typeface="sans"

            android:text="Magazine Notifications"/>
        <com.zcw.togglebutton.ToggleButton
            android:layout_width="54dp"
            toggle:tbOnColor="#4BDA64"
            android:layout_gravity="end"
            toggle:tbOffColor="#ddd"
            android:layout_margin="2dp"
            toggle:tbSpotColor="#ffffff"
            toggle:tbOffBorderColor="#4BDA64"
            toggle:tbBorderWidth="2dp"
            android:layout_height="30dp" >
        </com.zcw.togglebutton.ToggleButton>




    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/displayIssuesGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" />


    </LinearLayout>




</LinearLayout>















